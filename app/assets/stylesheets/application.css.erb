body {
  background-image: url(<%= asset_path 'CoverArt.jpg' %>);
  background-size: cover;
  background-position: 88% 30%;
  background-attachment: fixed;
  font-family: mr-eaves-modern, sans-serif;
}

h1 {
  color: white;
}

.overlay {
  z-index: -1;
  height: 100%;
  width: 100%;
  position: fixed;
  overflow: auto;
  top: 0px;
  left: 0px;
  background: radial-gradient(ellipse at center, rgba(35,50,75,0.75) 0%,rgba(8,15,45,1) 100%);
}

.container {
  z-index: 1;
}

.reactInsert {
  z-index: 1;
}

.topbar {
  padding: 5px 0 5px 0;
  background-color: #141C20;
  text-align: right;
}

.topbar-title {
  font-family: antiquarian, sans-serif;
  font-size: 25px;
  margin-left: 15%;
  color: white;
  float: left;
  display: inline;
}

.topbar-title:hover {
  color: orange;
}

.topbar-icon {
  width: 30px;
  margin-right: 13px;
}

.topbar ul {
  display: inline;
  padding: 5px 0;
  margin-right: 15%;
  list-style: none;
}

.topbar li {
  font-size: 20px;
  display: inline;
}

.topbar a {
  padding-left: 10px;
  color: #CCCCCC;
}

.topbar a:hover {
  color: orange;
}

#flash {
  background-color: white;
  margin: 0 30%;
  position: absolute;
  bottom: 0%;
}

@media (max-width:320px)  {
  .topbar-title {
    text-align: left;
    float: none;
    margin-left: 5px;
    display: block;
    font-size: 20px;
  }

  .topbar li {
    text-align: left;
    font-size: 20px;
    display: block;
    margin: 5px 0 5px 10px;
  }

  .topbar ul {
    display: block;
    padding: 0;
  }
  
  .topbar a {
    padding: 0;
  }
}

@media (min-width: 321px) and (max-width:480px)  {
  span.topbar-title {
    margin-left: 2%;
  }
  
  .topbar-title {
    padding-top: 5px;
    text-align: left;
    float: none;
    margin-left: 5px;
    display: block;
    font-size: 20px;
  }
  
  .topbar ul {
    margin-right: 2%;
  }
  
  .topbar li {
    text-align: left;
    font-size: 20px;
    display: block;
    margin: 5px 0 0px 10px;
  }
  
  .topbar a {
    line-height: 15px;
    padding: 0;
  }
}

@media (min-width:481px) and (max-width: 600) {
  .topbar-title {
    padding-top: 5px;
    text-align: left;
    float: none;
    margin-left: 5px;
    display: block;
    font-size: 20px;
  }
  
  .topbar ul {
    margin-right: 2%;
  }
  
  .topbar li {
    text-align: left;
    font-size: 20px;
    display: block;
    margin: 5px 0 0px 10px;
  }
  
  .topbar a {
    line-height: 15px;
    padding: 0;
  }
}

