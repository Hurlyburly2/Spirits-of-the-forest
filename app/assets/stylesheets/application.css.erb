body {
  background-image: url(<%= asset_path 'CoverArt.jpg' %>);
  background-size: cover;
  background-position: 88% 30%;
}

h1 {
  color: white;
}

.overlay {
  z-index: -1;
  height: 100%;
  width: 100%;
  position: fixed;
  overflow: auto;
  top: 0px;
  left: 0px;
  /* background: -moz-radial-gradient(center, ellipse cover, rgba(125,185,232,0.5) 0%, rgba(30,87,153,1) 100%);
  background: -webkit-radial-gradient(center, ellipse cover, rgba(125,185,232,0.5) 0%,rgba(30,87,153,1) 100%); */
  background: radial-gradient(ellipse at center, rgba(35,50,75,0.75) 0%,rgba(8,15,45,1) 100%);
}

.container {
  z-index: 1;
}

.reactInsert {
  z-index: 1;
}

.topbar {
  background-color: #141C20;
  text-align: right;
}

.topbar ul {
  padding: 5px 0;
  margin-right: 10%;
  list-style: none;
}

.topbar li {
  display: inline;
}

.topbar a {
  padding-left: 10px;
  color: #CCCCCC;
}

.topbar a:hover {
  color: orange;
}

#flash {
  background-color: white;
  margin: 0 30%;
  position: absolute;
  bottom: 0%;
}
