body {
  background-image: url(<%= asset_path 'CoverArt.jpg' %>);
  background-size: cover;
  background-position: 88% 30%;
}

.topbar {
  background-color: #141C20;
  text-align: right;
}

.topbar ul {
  padding: 5px 0;
  margin-right: 10%;
  list-style: none;
}

.topbar li {
  display: inline;
}

.topbar a {
  padding-left: 10px;
  color: #CCCCCC;
}

.topbar a:hover {
  color: orange;
}

#flash {
  background-color: white;
  margin: 0 30%;
  position: absolute;
  bottom: 0%;
}
